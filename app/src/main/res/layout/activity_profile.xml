<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E32636"/>


    <TextView
        android:id="@+id/type"
        android:layout_margin="5dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="TYPE"
        android:textColor="#ff0000"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:src="@drawable/profile_image"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        app:civ_border_width="2dp"
        android:layout_height="100dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Name: "
            android:textColorHint="#000"
            android:textSize="18sp" />

    <TextView
        android:id="@+id/name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Name"
        android:textAllCaps="true"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mail"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Email: "
            android:textColorHint="#000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/email"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Phone: "
            android:textColorHint="#000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/idNumber"
        android:textSize="18sp"
        android:text="ID Proof Number"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Phone: "
            android:textColorHint="#000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/phoneNumber"
        android:textSize="18sp"
        android:text="Phone Number"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_bloodtype_24"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Blood Group: "
            android:textColorHint="#000"
            android:textSize="18sp" />

        <TextView
        android:id="@+id/bloodGroup"
        android:textSize="18sp"
        android:text="Blood Group"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Phone: "
            android:textColorHint="#000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/id"
            android:textSize="18sp"
            android:text="ID Proof Number"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <Button
        android:id="@+id/backButton"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/buttons_background"
        android:text="Back"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/delete_account"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/buttons_background"
        android:text="Delete Account"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>

</LinearLayout>