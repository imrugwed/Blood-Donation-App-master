<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminBloodCamp">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.PopupTheme"
        android:background="#E32636"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:text="Blood Camp Update"
                android:textColor="#ff0000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayoutStyle"
            app:boxStrokeColor="#000"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:hintTextAppearance="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/placename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter place name"
                android:drawablePadding="10dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:textColorHint="#000"
                android:drawableStart="@drawable/ic_person"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayoutStyle"
            app:boxStrokeColor="#000"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:hintTextAppearance="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:drawablePadding="10dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:textColorHint="#000"
                android:drawableStart="@drawable/location_city_24"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayoutStyle"
            app:boxStrokeColor="#000"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:hintTextAppearance="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Land Mark"
                android:inputType="text"
                android:drawablePadding="10dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:textColorHint="#000"
                android:drawableStart="@drawable/landmark_24"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputLayoutStyle"
            app:boxStrokeColor="#000"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:hintTextAppearance="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="18sp"
                android:textColorHint="#000"
                android:drawableStart="@drawable/ic_phone"/>

        </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:layout_marginTop="3dp"
                android:theme="@style/TextInputLayoutStyle"
                android:drawablePadding="13dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:textColor="#000"
                android:inputType="none"
                android:padding="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingStart="15dp"
                android:id="@+id/disable_past_date"
                android:hint="Date"
                android:gravity="fill"
                android:drawableStart="@drawable/date_range_24"
                android:textSize="20sp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="18dp"
           android:padding="15dp"
           android:layout_marginRight="17dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:layout_marginRight="5dp"
                android:theme="@style/TextInputLayoutStyle"
                android:drawablePadding="13dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:padding="5dp"
                android:textColor="#000"
                android:id="@+id/from_time"
                android:hint="From Time"
                android:gravity="fill"
                android:drawableStart="@drawable/time_24"
                android:textSize="20sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:theme="@style/TextInputLayoutStyle"
                android:drawablePadding="13dp"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:padding="5dp"
                android:textColor="#000"
                android:paddingStart="15dp"
                android:id="@+id/to_time"
                android:hint="To Time"
                android:gravity="fill"
                android:drawableStart="@drawable/time_24"
                android:textSize="20sp"/>
       </LinearLayout>

        <Button
            android:id="@+id/update1"
            android:text="Update"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:background="@drawable/buttons_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Camp Allocated"
            android:visibility="gone"
            android:id="@+id/message1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title1"
            android:visibility="gone"
            android:text="Blood Camp Allocated"/>


    </LinearLayout>

</LinearLayout>