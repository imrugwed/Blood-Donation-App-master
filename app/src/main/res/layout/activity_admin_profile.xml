<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin_Profile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E32636"/>

    <TextView
        android:id="@+id/type"
        android:layout_margin="5dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textAllCaps="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Admin Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:src="@drawable/hospital_icon"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        app:civ_border_width="2dp"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Name: "
            android:textColorHint="#000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#000"
        android:text="Hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Phone: "
            android:textColorHint="#000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/phonenumber"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="+91 9870652134"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mail"                android:drawablePadding="10dp"
            android:textColor="#000"
            android:hint="Email: "
            android:textColorHint="#000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/email"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="blooddonationapp1147@gmail.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/textview_border"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/location_city_24"
            android:textColor="#000"
            android:hint="ADDRESS: "
            android:textColorHint="#000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/address"
        android:textSize="18sp"
        android:textColor="#000"
        android:justificationMode="inter_word"
        android:text="Ujagar Compound, Opp. Deonar Bus Depot Main Gate, Deonar, Chembur, Mumbai, Maharashtra - 400088 "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>






</LinearLayout>